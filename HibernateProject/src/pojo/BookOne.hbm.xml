<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" 
> 
<hibernate-mapping>
    <class name="pojo.BookOne" table="BOOK">    <!-- 类对应一个表--> 
        <id name="bid" column="BID">        
           <generator class="identity"/>  <!-- 主键的生成策略-->
        </id>
        <property name="bname" column="BNAME" />
        <property name="price" column="PRICE" />
        <!-- <many-to-one name="在多方中定义一方属性名" class="一方对应类的路径" unique="唯一性">
        	<column name="多方表对应外键字段"></column>
        </many-to-one> -->
        <many-to-one name="categoryone" class="pojo.CategoryOne" unique="true" cascade="all" >
        	<column name="CID"></column>
        </many-to-one>
    </class>
</hibernate-mapping>